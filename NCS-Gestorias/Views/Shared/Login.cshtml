<div class="form-control"
     style="height:100px; width:55%; overflow: hidden; cursor:pointer"></div>
<div class="col-md-12 col-lg-12 col-sm-12 cuerpo">

    <div class="col-md-5 col-lg-5 col-sm-5 titulo">
        Acceso Perfil
    </div>
    <br />
    <br />
    @if (@ViewBag.MensajeError != null && @ViewBag.MensajeError != "")
    {
        <div class="row metidos">
            <div class="card loginMensaje">
                <div class="card-body">
                    @ViewBag.MensajeError
                </div>
            </div>
        </div>
    }
    <br />
    <div class="row metidos">
        <div class="col-md-3 col-lg-3 col-sm-3">
            @Html.Label("Usuario")
        </div>
        <div class="col-md-3 col-lg-3 col-sm-3 inputs">
            <input type="text" class="form-control" id="username" name="Username">
        </div>
    </div>
    <div class="row metidos">
        <div class="col-md-3 col-lg-3 col-sm-3">
            @Html.Label("Password")
        </div>
        <div class="col-md-3 col-lg-3 col-sm-3 inputs">
            <input type="password" class="form-control" id="password" name="Password">
        </div>
    </div>
    <input type="hidden" id="urlreferer" name="urlreferer" />
    <div class="row metidos">
        <div class="col-md-6 col-lg-6 col-sm-6" style="text-align:right">
            <a href="/recuperarpassword/" class="metidos">Recuperar Contraseña</a>
        </div>
    </div>
    <div class="row metidos">
        <div class="col-md-6 col-lg-6 col-sm-6" style="text-align:right">
            <button type="submit" class="btn btn-primary">Acceder</button>

        </div>

    </div>
    <br />
</div>


